    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sample Driver",
            "type": "debugpy",
            "request": "launch",
            "program": "device/app.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Generator",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/templates",
            "program": "app.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}